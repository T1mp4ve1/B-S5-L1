@model IEnumerable<Biblioteca.Models.Author>

<h1 class="text-center">Lista autori</h1>

<h3>Aggiungi autore</h3>
<form asp-action="Create" method="post" class="d-flex mb-3">
    <input type="text" name="Pseudonym" class="form-control w-25 me-1" required />
    <button type="submit" class="btn btn-outline-success">+</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Pseudonimo</th>
            <th>ID</th>
            <th>Modifica</th>
            <th>Rimuovi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var A in Model)
        {
            <tr>
                <td><strong>@A.Pseudonym</strong></td>
                <td>@A.AuthorID</td>

                <!--EDIT-->
                <td>

                    <!-- Bottone per aprire la modal -->
                    <i class="bi bi-pencil-square fs-3"
                       type="button"
                       data-bs-toggle="modal"
                       data-bs-target="#modifyModal-@A.AuthorID">
                    </i>

                    <div class="modal fade" id="modifyModal-@A.AuthorID" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Conferma modifiche</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    Inserisci nome desiderato "<strong>@A.Pseudonym</strong>"?
                                </div>

                                <!-- modifica -->
                                <div class="modal-footer">
                                    
                                    <form asp-action="Edit"
                                          asp-route-id="@A.AuthorID"
                                          method="post"
                                          class="d-flex">
                                        <input type="hidden" name="AuthorID" value="@A.AuthorID" />
                                        <input type="text" name="Pseudonym" value="@A.Pseudonym" class="form-control me-1" required />
                                        <button type="button" class="btn btn-secondary me-1" data-bs-dismiss="modal">Annulla</button>
                                        <button type="submit" class="btn btn-danger me-1">Modifica</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>

                <!-- DELETE -->
                <td>
                    <!-- Bottone per aprire la modal -->
                    <i class="bi bi-x-circle-fill fs-4 text-danger"
                       type="button"
                       data-bs-toggle="modal"
                       data-bs-target="#deleteModal-@A.AuthorID">
                   </i>

                    <!-- Modal di conferma -->
                    <div class="modal fade" id="deleteModal-@A.AuthorID" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Conferma eliminazione</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    Sei sicuro di voler eliminare l'autore "<strong>@A.Pseudonym</strong>"?
                                </div>

                                <!-- Cancella -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                                    <form asp-action="Delete" 
                                    asp-route-id="@A.AuthorID" 
                                    method="post" 
                                    class="d-inline">
                                        <button type="submit" class="btn btn-danger">Elimina</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
