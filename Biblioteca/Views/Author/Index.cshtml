@model IEnumerable<Biblioteca.Models.Author>

<h1 class="text-center">Lista autori</h1>

<h3>Aggiungi autore</h3>
<form asp-action="Create" method="post" class="d-flex mb-3">
    <input type="text" name="Pseudonym" class="form-control w-25 me-1" required/>
    <button type="submit" class="btn btn-outline-success">+</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Pseudonimo</th>
            <th>ID</th>           
            <th>Modifica</th>
            <th>Rimuovi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var A in Model)
        {
            <tr>
                <td><strong>@A.Pseudonym</strong></td>
                <td>@A.AuthorID</td>
                <td>
                    <a 
                        asp-controller="Author" 
                        asp-action="Edit"
                        class="btn btn-outline-warning"
                        style="width: 30px; height: 30px">
                    </a>
                </td>
                <td>
                    <a 
                        asp-controller="Author" 
                        asp-action="Delete"
                        class="btn btn-outline-danger"
                        style="width: 30px; height: 30px">
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>